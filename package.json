{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "npm run lint && npm run typecheck && npm run test",
    "pages:dev": "wrangler pages dev .next --kv USER_DATA --persist-to .wrangler/state",
    "pages:deploy": "npm run clean && npm run build && wrangler pages deploy .next --project-name=stiflingchip --commit-dirty=true",
    "deploy": "npm run validate && npm run build && wrangler pages deploy .next --project-name stiflingchip",
    "db:generate": "wrangler d1 migrations list stiflingchip",
    "db:push": "wrangler d1 migrations apply stiflingchip",
    "clean": "rm -rf .next out",
    "prepare": "husky",
    "analyze": "ANALYZE=true npm run build",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.4.0",
    "@cloudflare/pages-plugin-cloudflare-access": "^1.0.5",
    "@heroicons/react": "^2.2.0",
    "@tanstack/react-query": "^5.69.0",
    "@tanstack/react-query-devtools": "^5.69.0",
    "framer-motion": "^12.5.0",
    "next": "15.2.3",
    "nprogress": "^0.2.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hot-toast": "^2.5.2",
    "react-responsive": "^10.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/runtime": "^7.26.10",
    "@cloudflare/workers-types": "^4.20250320.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@next/bundle-analyzer": "^15.2.3",
    "@next/eslint-plugin-next": "15.2.3",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
