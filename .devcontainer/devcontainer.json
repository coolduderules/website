{
  "name": "Website Development",
  "image": "node:current-alpine3.21",
  "hostRequirements": {
    "cpus": 2
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "npx --yes npm-check-updates -u",
  "postCreateCommand": "npm install",
  "postAttachCommand": {
    "server": "npm run lint || :"
  },
  "forwardPorts": [
    3000
  ],
  "customizations": {
    "codespaces": {
      "openFiles": [
        "src/index.ts"
      ]
    }
  },
  "remoteUser": "node",
  "remoteEnv": {
    "NODE_ENV": "development"
  }
}
