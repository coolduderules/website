{
  "name": "Website Development",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 2
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "npx --yes npm-check-updates -u",
  "postCreateCommand": "npm install",
  "postAttachCommand": {
    "server": "npm run lint || :"
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
    }
  },
  "forwardPorts": [
    3000
  ],
  "customizations": {
    "codespaces": {
      "openFiles": [
        "src/index.ts"
      ]
    }
  },
  "remoteUser": "root",
  "remoteEnv": {
    "NODE_ENV": "development"
  }
}
